<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="←"
			android:gravity="center"
			android:textSize="48sp"
			android:textColor="#FF0BB6F6"
			android:textStyle="bold"
			android:onClick="back"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingBottom="10dp"/>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="Our Solution"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:padding="15dp"
			android:textStyle="bold"
			android:textColor="@color/colorApp"
			android:gravity="center"/>

	</LinearLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="4dp"
		android:layout_margin="10dp"
		android:background="@color/colorApp"/>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="26dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="◾State of the art toilets available on wheels at strategic locations"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FF000000"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="◾Safe facility for women, children, differently abled &amp; the elderly"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FF000000"
				android:layout_marginTop="10dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="◾Provide basic sanitation products"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FF000000"
				android:layout_marginTop="10dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="◾Availability of clean potable water"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FF000000"
				android:layout_marginTop="10dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="◾Health Kiosk for first aid &amp; generic testing center"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FF000000"
				android:layout_marginTop="10dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="◾Eco-friendly project solutions"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FF000000"
				android:layout_marginTop="10dp"/>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

