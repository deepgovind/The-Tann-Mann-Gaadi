<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<android.support.design.widget.AppBarLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

		<android.support.v7.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

	</android.support.design.widget.AppBarLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="top|center"
			android:padding="10dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="About The Tann Mann Gaadi"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_marginTop="10dp"
				android:textStyle="bold"
				android:textColor="@color/colorApp"
				android:textSize="25sp"/>

			<View
				android:background="@color/colorApp"
				android:layout_width="match_parent"
				android:layout_height="5dp"
				android:layout_margin="12dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="We are a Not for Profit trust venture building Wellness on wheels (The Tann Mann Gaadi) to address the serious problem of open defecation which is a major health risk for all in developing countries."
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:padding="8dp"
				android:textColor="#FF000000"
				android:id="@+id/homeTextView1"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="We are in the mission of integrating technology with our social cause."
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FF000000"
				android:padding="8dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="We are in the process of providing a holistic approach to social responsibility keeping health, sensitization, safety and Eco-friendly solutions"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:textColor="#FF000000"
				android:padding="8dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="Why Tann Mann Gaadi"
				android:textColor="@color/colorApp"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:layout_marginTop="8dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="◾Open defecation which is a major health risk globally"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#FF000000"
				android:layout_marginTop="7dp"
				android:textSize="16sp"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="◾Inaccessibility of Hygienic &amp; Safe public conveniences"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#FF000000"
				android:layout_marginTop="7dp"
				android:textSize="16sp"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="◾Un-safe environment for women, children, differently abled &amp; the elderly"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#FF000000"
				android:layout_marginTop="7dp"
				android:textSize="16sp"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#FF000000"
				android:layout_marginTop="7dp"
				android:textSize="16sp"
				android:text="◾Lack of potable and  clean water"
				android:layout_marginLeft="10dp"/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="◾Un-availability of basic health facilities &amp; amenities"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:textColor="#FF000000"
				android:layout_marginTop="7dp"
				android:textSize="16sp"
				android:layout_marginLeft="10dp"/>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

